{
  "expo": {
    "name": "Location Tracker",
    "slug": "location_tracker",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0f172a"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.locationtracker",
      "infoPlist": {
        "NSLocationAlwaysAndWhenInUseUsageDescription": "We need your location to track your work hours and movements.",
        "NSLocationWhenInUseUsageDescription": "We need your location to track your work hours and movements.",
        "NSLocationAlwaysUsageDescription": "We need your location in the background to track your work hours continuously.",
        "UIBackgroundModes": [
          "location"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0f172a"
      },
      "package": "com.yourcompany.locationtracker",
      "edgeToEdgeEnabled": false,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE",
        "FOREGROUND_SERVICE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.FOREGROUND_SERVICE_LOCATION"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyAmp3doQi5_hJmyesJlAwhetXj_dBrdFrc"
        }
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Location Tracker to use your location.",
          "isAndroidBackgroundLocationEnabled": true,
          "isAndroidForegroundServiceEnabled": true
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "008ff613-6a17-4c20-9946-dcbc4eed897f"
      },
      "firebase": {
        "apiKey": "AIzaSyAmp3doQi5_hJmyesJlAwhetXj_dBrdFrc",
        "authDomain": "location-tracker-2fea3.firebaseapp.com",
        "projectId": "location-tracker-2fea3",
        "storageBucket": "location-tracker-2fea3.firebasestorage.app",
        "messagingSenderId": "810955879140",
        "appId": "1:810955879140:web:1d3d59174ff564beacf2f1"
      }
    }
  }
}
